<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_server"
        android:title="@string/pref_cat_server"
        >

        <Preference
            android:key="server_url"
            android:defaultValue="@string/server_url"
            />

        <Preference
            android:key="primary_color"
            android:defaultValue="@color/primary"
            />

        <Preference
            android:key="number_of_rows"
            android:defaultValue="@integer/num_rows"
            />

        <CheckBoxPreference
            android:key="use_inputs"
            android:defaultValue="@bool/use_inputs"
            />

        <Preference
            android:key="number_of_columns"
            android:defaultValue="3"
            />

        <CheckBoxPreference
            android:key="show_images"
            android:defaultValue="true"
            />

        <Preference
            android:key="request_types"
            android:defaultValue="@string/default_request_type"
            android:entries="@array/request_types_entries"
            android:entryValues="@array/request_types_entry_values"
            />

        <Preference
            android:key="request_agent"
            android:defaultValue="banana"
            />

    </PreferenceCategory>

</PreferenceScreen>
